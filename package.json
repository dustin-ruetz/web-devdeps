{
	"name": "web-devdeps",
	"version": "1.2.1",
	"description": "Package that provides development dependencies for other web projects (both browser- and Node.js-based) to consume.",
	"main": "./lib/exports.js",
	"scripts": {
		"prebuild": "npm run clean/lib",
		"build": "tsc --project ./tsconfig.build.json",
		"check": "npm-run-all2 --parallel check/*",
		"check/format": "npm run format -- --check ./",
		"check/lint/js-ts": "npm run lint/js-ts -- ./",
		"check/types": "tsc --noEmit",
		"clean": "npm-run-all2 --parallel clean/*",
		"clean/caches": "jest --clear-cache && rimraf ./.caches/",
		"clean/deps": "npx rimraf ./node_modules/ ./package-lock.json",
		"clean/lib": "rimraf ./lib/",
		"dev": "npm run build -- --watch",
		"fix": "npm-run-all2 --parallel fix/*",
		"fix/format": "npm run format -- --write ./",
		"fix/lint/js-ts": "npm run lint/js-ts -- --fix ./",
		"format": "node ./lib/ format",
		"// githooks/*": "Refer to the files in the ./.githooks/ folder for documentation on these commands.",
		"githooks/commit-msg": "node ./lib/ githooks/commit-msg",
		"githooks/pre-commit": "npm run build && node ./lib/ githooks/pre-commit",
		"githooks/pre-push": "npm run validate",
		"// github/*": "Use the `act` tool to test GitHub Actions workflows locally.",
		"github/release": "act --input DRY_RUN=true --secret OP_SERVICE_ACCOUNT_TOKEN --workflows ./.github/workflows/release.yaml",
		"github/validate": "act --workflows ./.github/workflows/validate.yaml",
		"init": "git config core.hooksPath ./.githooks/_/ && npm install && npm run validate",
		"init-repo": "rimraf ./.init-repo-script-test-output/ && mkdir ./.init-repo-script-test-output/ && node ./lib/ init-repo",
		"lint/js-ts": "node ./lib/ lint/js-ts",
		"prepublishOnly": "npm run build",
		"test/unit": "node ./lib/ test/unit",
		"test/unit/coverage": "npm run test/unit -- --coverage",
		"test/unit/coverage-watch-all": "npm run test/unit/coverage -- --watch-all",
		"test/unit/watch": "npm run test/unit/coverage -- --watch",
		"validate": "npm-run-all2 --sequential build check test/unit/coverage"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"bin": {
		"web-devdeps": "lib/index.js"
	},
	"engines": {
		"node": ">=18",
		"npm": ">=10"
	},
	"files": [
		".githooks/",
		"lib/",
		".node-version",
		"tsconfig.build.json",
		"tsconfig.json"
	],
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"url": "git+ssh://git@github.com/dustin-ruetz/web-devdeps.git"
	},
	"type": "module",
	"dependencies": {
		"@commitlint/cli": "19.6.1",
		"@commitlint/config-conventional": "19.6.0",
		"@eslint/compat": "1.2.4",
		"@eslint/js": "9.17.0",
		"@prettier/plugin-pug": "3.2.0",
		"@prettier/plugin-xml": "3.4.1",
		"@swc/core": "1.10.4",
		"@swc/jest": "0.2.37",
		"@testing-library/jest-dom": "6.6.3",
		"@tsconfig/strictest": "2.0.5",
		"@types/eslint-plugin-jsx-a11y": "6.10.0",
		"@types/jest": "29.5.14",
		"@types/lint-staged": "13.3.0",
		"@types/node": "22.10.3",
		"conventional-changelog-conventionalcommits": "8.0.0",
		"eslint": "9.17.0",
		"eslint-plugin-jest": "28.10.0",
		"eslint-plugin-jsdoc": "50.6.1",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-react-hooks": "5.1.0",
		"globals": "15.14.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"lint-staged": "15.3.0",
		"npm-run-all2": "7.0.2",
		"postcss-scss": "4.0.9",
		"postcss-styled-syntax": "0.7.0",
		"prettier": "3.4.2",
		"rimraf": "6.0.1",
		"semantic-release": "24.2.0",
		"stylelint": "16.12.0",
		"stylelint-config-standard-scss": "14.0.0",
		"typescript": "5.7.2",
		"typescript-eslint": "8.19.0"
	},
	"devDependencies": {
		"husky": "9.1.7"
	}
}

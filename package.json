{
	"name": "web-devdeps",
	"version": "0.0.0-semantically-released",
	"description": "Package that provides development dependencies for other web projects (both browser- and Node.js-based) to consume.",
	"bin": {
		"web-devdeps": "./lib/index.js"
	},
	"exports": {
		".": "./lib/exports.js",
		"./package.json": "./package.json"
	},
	"main": "./lib/exports.js",
	"scripts": {
		"prebuild": "pnpm clean.lib",
		"build": "tsc --project ./tsconfig.build.json",
		"check": "pnpm run /check./",
		"check.exports": "attw --ignore-rules cjs-resolves-to-esm --pack ./",
		"check.format": "pnpm format --check ./",
		"check.lint.js-ts": "pnpm lint.js-ts ./",
		"check.types": "tsc --noEmit",
		"clean": "pnpm run /clean./",
		"clean.caches": "pnpx jest --clear-cache && git clean --force -X ./.caches/",
		"clean.deps": "git clean --force -X ./node_modules/",
		"clean.lib": "git clean --force -X ./lib/",
		"dev": "pnpm build --watch",
		"fix": "pnpm run /fix./",
		"fix.format": "pnpm format --write ./",
		"fix.lint.js-ts": "pnpm lint.js-ts --fix ./",
		"format": "node ./lib/ format",
		"// githooks.*": "Refer to the files in the ./.githooks/ folder for documentation on these commands.",
		"githooks.commit-msg": "node ./lib/ githooks.commit-msg",
		"githooks.pre-commit": "pnpm build && node ./lib/ githooks.pre-commit",
		"githooks.pre-push": "pnpm validate",
		"// github.*": "Use the `act` tool to test GitHub Actions workflows locally.",
		"github.release": "act --input DRY_RUN=true --secret OP_SERVICE_ACCOUNT_TOKEN --workflows ./.github/workflows/release.yaml",
		"github.validate": "act --workflows ./.github/workflows/validate.yaml",
		"init": "git config core.hooksPath ./.githooks/_/ && pnpm install && pnpm validate",
		"preinit-repo": "git clean --force -X ./.init-repo-script-test-output/ && mkdir ./.init-repo-script-test-output/",
		"init-repo": "node ./lib/ init-repo",
		"lint.js-ts": "node ./lib/ lint.js-ts",
		"prepublishOnly": "pnpm build",
		"test.unit": "node ./lib/ test.unit",
		"test.unit.coverage": "pnpm test.unit --coverage",
		"test.unit.coverage-watch-all": "pnpm test.unit.coverage --watch-all",
		"test.unit.watch": "pnpm test.unit.coverage --watch",
		"validate": "pnpm build && pnpm check && pnpm test.unit.coverage"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"engines": {
		"node": ">=18",
		"npm": ">=10",
		"pnpm": ">=10"
	},
	"packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
	"files": [
		".githooks/",
		"lib/",
		".node-version",
		"tsconfig.build.json",
		"tsconfig.json"
	],
	"publishConfig": {
		"provenance": true
	},
	"repository": {
		"url": "git+ssh://git@github.com/dustin-ruetz/web-devdeps.git"
	},
	"type": "module",
	"dependencies": {
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-conventional": "19.8.1",
		"@commitlint/types": "19.8.1",
		"@eslint/compat": "1.3.2",
		"@eslint/js": "9.34.0",
		"@prettier/plugin-pug": "3.4.2",
		"@prettier/plugin-xml": "3.4.2",
		"@swc/core": "1.13.5",
		"@swc/jest": "0.2.39",
		"@testing-library/jest-dom": "6.8.0",
		"@tsconfig/strictest": "2.0.5",
		"@types/eslint-plugin-jsx-a11y": "6.10.0",
		"@types/jest": "30.0.0",
		"@types/node": "22.18.0",
		"conventional-changelog-conventionalcommits": "9.1.0",
		"eslint": "9.34.0",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-jest": "29.0.1",
		"eslint-plugin-jsdoc": "54.1.1",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "5.2.0",
		"globals": "16.3.0",
		"jest": "30.1.1",
		"jest-environment-jsdom": "30.1.1",
		"lint-staged": "16.1.5",
		"postcss-scss": "4.0.9",
		"postcss-styled-syntax": "0.7.1",
		"prettier": "3.6.2",
		"semantic-release": "24.2.7",
		"stylelint": "16.23.1",
		"stylelint-config-standard-scss": "16.0.0",
		"stylelint-plugin-logical-css": "1.2.3",
		"typescript": "5.9.2",
		"typescript-eslint": "8.41.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "0.18.2",
		"husky": "9.1.7"
	}
}
